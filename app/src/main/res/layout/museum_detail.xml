<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuseumDetailActivity">


    <TextView
        android:id="@+id/datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DADAS MUSEU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="679dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datos">

        <TextView
            android:id="@+id/nomdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccio:" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcio:" />

        <TextView
            android:id="@+id/direcciongrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccio grup:" />

        <TextView
            android:id="@+id/codigopostal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codi postal:" />

        <TextView
            android:id="@+id/nommunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom municipi:" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <TextView
            android:id="@+id/telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre telefon:" />

        <TextView
            android:id="@+id/habitantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre habitants:" />

        <TextView
            android:id="@+id/extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extensio:" />

        <TextView
            android:id="@+id/altitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Altitud:" />

        <ImageView
            android:id="@+id/imageescudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imagebandera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>